    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: #f9f9f9;
        }

        .signup-container {
            display: flex;
            width: 80%;
            max-width: 900px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }

        .form-section {
            flex: 1;
            background-color: #ffffff;
            padding: 30px;
        }

        .form-section h2 {
            font-size: 24px;
            color: #f44336;
            margin-bottom: 20px;
        }

        .social-login {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .social-login a {
            text-decoration: none;
            display: inline-block;
            width: 40px;
            height: 40px;
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 18px;
            color: #666;
            transition: background-color 0.3s ease;
        }

        .social-login a:hover {
            background-color: #f44336;
            color: #fff;
        }

        .form-section form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .form-section input {
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
        }

        .form-section input:focus {
            border-color: #f44336;
            outline: none;
        }

        .form-section .checkbox {
            display: flex;
            align-items: center;
            gap: 5px;
            font-size: 12px;
        }

        .form-section .checkbox input {
            width: auto;
        }

        .form-section .buttons {
            display: flex;
            gap: 10px;
        }

        .form-section button {
            flex: 1;
            padding: 10px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .form-section .signup-btn {
            background-color: #f44336;
            color: #fff;
        }

        .form-section .signin-btn {
            background-color: #fff;
            color: #f44336;
            border: 1px solid #f44336;
        }

        .form-section .signup-btn:hover {
            background-color: #d32f2f;
        }

        .form-section .signin-btn:hover {
            background-color: #f44336;
            color: #fff;
        }

        .image-section {
            flex: 1;
            background:url(assets/img/lienhe.png); background-size: 100% 100%;
            background-size: cover;
        }
    </style>
</head>
<body>
    
  
    <div class="signup-container">
        <div class="form-section">
            <h2>Tạo Tài Khoản</h2>
            <div class="social-login">
                <a href="#"><i class="bi bi-google"></i> G</a>
                <a href="#"><i class="bi bi-facebook"></i> F</a>
                <a href="#"><i class="bi bi-linkedin"></i> L</a>
            </div>
           
            <form id="registerForm">
                <input type="text" id="name" placeholder="Nhập tên của bạn" required>
                <input type="email" id="email" placeholder="Nhập email" required>
                <input type="password" id="password" placeholder="Nhập mật khẩu" required>
                <input type="password" id="confirmPassword" placeholder="Nhập lại mật khẩu" required>
                <div class="checkbox">
                    <input type="checkbox" id="terms" required>
                    <label>Tôi đồng ý với <a href="#">Điều khoản </a> và <a href="#">Chính sách quyền riêng tư</a>.</label>
                </div>
                <div class="buttons">
                    <button type="submit" class="signup-btn">Đăng ký</button>
                </div>
            </form>
            
        </div>
        <div class="image-section"></div>
    </div>
</body>
</html>

<script>
    document.getElementById('registerForm').addEventListener('submit', async (e) => {
        e.preventDefault();

        const name = document.getElementById('name').value;
        const email = document.getElementById('email').value;
        const password = document.getElementById('password').value;
        const confirmPassword = document.getElementById('confirmPassword').value;

        // Kiểm tra mật khẩu
        if (password !== confirmPassword) {
            alert('Mật khẩu không khớp!');
            return;
        }

        try {
            const response = await fetch('/register', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ name, email, password }),
            });

            const result = await response.json();
            if (response.ok) {
                alert(result.message);
           
            } else {
                alert(result.error);
            }
        } catch (error) {
            console.error('Lỗi:', error);
            alert('Đã xảy ra lỗi trong quá trình đăng ký!');
        }
    });

</script>
